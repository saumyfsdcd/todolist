<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todo List</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300&display=swap" rel="stylesheet">
    <style>
        body,
        html {
            height: 100%;
            font-family: 'Poppins', sans-serif;
        }

        body {
            background: linear-gradient(20deg,
                    #9d77db 0%,
                    #9d77db 50%,
                    #e3e5fa 50%,
                    #e3e5fa 100%);
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            align-items: center;
            margin: 0px;
        }

        h1 {
            background-color: #9d77db;
            padding: 15px;
            border-radius: 10px;
            color: white;
        }

        .ssfds {
            min-height: 100px;
            min-width: 700px;
            max-height: 500px;
            background-color: white;
            border-radius: 15px;
            padding: 20px;
            /* position: relative; */
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        .l {
            overflow-x: auto;
            /* display: flex;/ */
        }

        .sui {
            font-size: 25px;
        }

        hr {
            opacity: 30%;
        }



        button {

            /* position: absolute;
            right: 7%;
            bottom: 7%; */
            background-color: #9d77db;
            padding: 20px;
            border-radius: 50%;
            color: white;
            border: none;
            outline: none;
        }

        i {
            font-size: 40px;

        }

        .s {
            /* position: absolute;
            bottom: 10%; */
            width: 75%;
            border: none;
            border-bottom: 1px solid black;
            font-size: 25px;
        }

        form {
            /* margin-top: 30px; */
            display: flex;
            justify-content: space-between;
        }

        .p {
            display: flex;
        }

        .io {
            color: white;
        }

        #ko,
        .sui {
            display: inline;
        }

        input:checked+p {
            text-decoration: line-through;
            text-decoration-color: #9d77db;
            text-decoration-thickness: 5px;
        }

        input[type="checkbox"] {
            margin: 20px;
        }

        .op {
            margin-bottom: 20px;
        }

        textarea:focus,
        input:focus {
            outline: none;
        }

        @media only screen and (max-width: 838px) {
            .ssfds {
                min-width: 100px;
            }
        }

        @media only screen and (max-width: 522px) {
            .ssfds {
                max-width: 250px;
                min-width: 90px;
            }
        }
    </style>
</head>

<body>
    <h1>
        <%=r%>
    </h1>
    <div class="ssfds">
        <div id="p" class="l">
            <%array.forEach((data)=>{%>
                <div class="op">
                    <input id="ko" autocomplete="off" type="checkbox">
                    <!-- <nobr></nobr> -->
                    <p class="sui">
                        <%=data%>
                    </p>
                    <hr>
                </div>
                <%})%>
        </div>
        <form action="/" method="post">
            <input class="s" name="s" placeholder="New Items..." type="text">
            <button id="s" type="submit"><i class="fa-solid fa-plus"></i></button>
        </form>
    </div>
    <p class="io">Copyright@cristianoronaldo</p>
    <script src="https://kit.fontawesome.com/513ea60794.js" crossorigin="anonymous"></script>
    <script>
        // document.getElementById("s").addEventListener("click", () => {


        var someElement = document.getElementById("p");
        function scrollToBottom() {
            someElement.scrollTop = someElement.scrollHeight;
        }
        scrollToBottom();
    </script>
</body>

</html>